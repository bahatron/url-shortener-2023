{
    "version": "1.0.0",
    "author": "simon.piscitelli@gmail.com",
    "license": "Apache-2.0",
    "scripts": {
        "setup": "npm install && npm run build:clean",
        "postinstall": "husky install",
        "test": "DEBUG_ENABLED=0 jest --forceExit",
        "test:ci": "DEBUG_ENABLED=0 npm run test -- --reporters=default --reporters=jest-stare --logHeapUsage --maxWorkers=50%",
        "build": "tsc -p tsconfig.build.json",
        "build:clean": "rm -rf dist && npm run build",
        "knex:migration": "LOCAL_ENV=1 knex migrate:make --client pg ${1}",
        "knex:migrate": "knex migrate:latest",
        "ts:dev": "npm run build -- --watch & pm2-runtime start process.config.js --only ts-api",
        "api:dev": "npm run build -- --watch & pm2-runtime start process.config.js --only api",
        "graphql:dev": "npm run build -- --watch & pm2-runtime start process.config.js --only graphql-api",
        "tilt:clean": "tilt down && tilt up"
    },
    "dependencies": {
        "@bahatron/utils": "^3.5.0",
        "@bull-monitor/express": "^5.0.1",
        "@faker-js/faker": "^6.3.1",
        "@sinclair/typebox": "^0.24.28",
        "@types/bcrypt": "^5.0.0",
        "@types/bull": "^3.15.9",
        "@types/express": "^4.17.13",
        "@types/ioredis": "^5.0.0",
        "@types/jest": "^27.4.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.14.178",
        "@types/luxon": "^2.0.9",
        "@types/node": "^17.0.14",
        "@types/pg": "^8.6.4",
        "@types/swagger-ui-express": "^4.1.3",
        "axios": "^0.25.0",
        "bcrypt": "^5.0.1",
        "bull": "^4.9.0",
        "express": "^4.18.2",
        "express-graphql": "^0.12.0",
        "graphql": "^15.8.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-stare": "^2.3.0",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.4.2",
        "lodash": "^4.17.21",
        "luxon": "^2.3.0",
        "pg": "^8.7.1",
        "prettier": "^2.6.2",
        "swagger-ui-express": "^4.3.0",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    }
}
