{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "diagnostics": false,
        "incremental": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true
    },
    "exclude": ["node_modules", "dist"]
}
